commands:
    01_install_apcu:
        command: pecl install igbinary
        test: '! /usr/bin/pecl info igbinary'
    02_remove_extension:
        command: /bin/sed -i -e '/extension="igbinary.so"/d' /etc/php.ini
    03_create_conf:
        command: /bin/echo 'extension="igbinary.so"' > /etc/php.d/50-igbinary.ini
