{% extends '/materialize/layout/base.twig' %}
{% form_theme form '/materialize/form/theme.twig' %}

{% block title %}Syno Storm{% endblock %}

{% block body %}

    <header class="nav-wrapper container mt-4 center">
        <!-- <img class="header_logo" src="" alt="Logo"> -->
    </header>

    {% if page.content is defined and '' != page.content %}
        <div class="container center my-1">
            {{ page.content }}
        </div>
    {% endif %}

    <main class="container">
        {{ form_start(form, {'attr': {'class': 'row'}}) }}

            {% for question in page.questions %}
                {{ form_row(attribute(form, ('q_' ~ question.id) ) ) }}
            {% endfor %}

            <section class="container center btn-container mt-5">
                <a class="btn waves-effect waves-light btn-small blue disabled">
                    Back
                </a>
                {{ form_widget(form.next, {'attr': {'class': 'btn waves-effect waves-light btn-small blue accent-3'}}) }}
            </section>

        {{ form_end(form) }}
    </main>

    {% include 'materialize/page/_footer.twig' %}

{% endblock %}
