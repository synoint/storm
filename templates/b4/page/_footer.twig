<footer>
    <div class="position-absolute d-none d-lg-block d-xl-block">
        {% if 'mediametrie' == survey.config.colorTheme %}
            <img src="{{ asset('build/images/logo_white.png') }}" alt="Mediametrie Logo - White" class="position-absolute mt-3 ml-3 footer-logo">
        {% else %}
            <p class="mt-3 text-white powered-by">Powered by</p>
            <img src="{{ asset('build/images/syno_white.png') }}" alt="Syno International Logo - White" class="position-absolute ml-3 footer-logo">
        {% endif %}
    </div>
    <div class="container">
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: {{ survey_progress(survey, page) }}%;"
                 aria-valuenow="{{ survey_progress(survey, page) }}" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</footer>
